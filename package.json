{
  "name": "electron-demo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "max dev",
    "build": "max build",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "max setup",
    "start": "npm run dev",
    "update:deps": "pnpm update --interactive --latest",
    "rebuild-deps": "electron-builder install-app-deps",
    "electron:init": "max electron init",
    "electron:dev": "max dev electron",
    "electron:dir": "max build electron --dir",
    "electron:build:win": "max build electron --win",
    "electron:build:mac": "max build electron --mac",
    "electron:build:linux": "max build electron --linux"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,less}": [
      "prettier --write",
      "max lint"
    ]
  },
  "dependencies": {
    "@umijs/max": "^4.0.74",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@liangskyli/umijs-plugin-electron": "^0.1.1",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "cross-env": "^7.0.3",
    "electron": "^25.4.0",
    "electron-builder": "^24.6.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-packagejson": "^2.4.5",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16.14.0",
    "pnpm": "^8"
  }
}
